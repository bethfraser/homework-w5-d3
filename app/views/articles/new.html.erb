<h1>Write New Article</h1>

<%= form_for @article do |f| %>

<%= f.label :title %><br>
<%= f.text_field :title, autofocus: true %><br>

<%= f.label :content %><br>
<%= f.text_area :content, rows: 15 %><br>

<%= f.label :image %><br>
<%= f.text_field :image, placeholder: 'Optional image URL' %><br>

<%= f.submit 'New Article' %>

<% end %>